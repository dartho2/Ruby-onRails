<% @orders_groups.each  do |month, order| %>
    <% total_p = 0 %>
    <% total_po = 0 %>
    <% date_in_link = "#{month.to_datetime.strftime('%m/%d/%Y')}" %>
    <h1 class="center"><%= date_in_link %></h1>
<table id="datatable-orders" class="display responsive nowrap" cellspacing="0" width="100%" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
  <thead>
  <tr>
    <th class="cont-left cont-right col-6 col-sm-2">Kupujący</th>
    <th class="cont-left cont-right col-6 col-sm-2">Numer FV</th>
    <th class="cont-left cont-right col-6 col-sm-1">Kod Produktu</th>
    <th class="cont-left cont-right col-6 col-sm-2">Cena Sprzedaży (B)</th>
    <th class="cont-left cont-right col-6 col-sm-1">Ilość</th>
    <th class="cont-left cont-right col-6 col-sm-2">Cena Zakupu (N) + Rabat</th>
    <th class="cont-left cont-right col-6 col-sm-2">Suma</th>
    <th class="cont-left cont-right col-6 col-sm-2">Zysk (N)</th>
  </tr>
  </thead>
  <tbody>
  <% order.each do |f| %>
      <tr>
        <% f.product_orders.each_with_index do |product_order, i| %>
            <% if i >= 1 %> <% total_ps = 0 %></tr><tr>
              <% end %>

            <td><%= f.client.present? ? f.client.firstname : "Paragon" %></td>
            <td data-sort="<%= f.name.gsub('/','') %>"><%= f.name %></td>
            <td><%= product_order.ddd %></td>
            <td><%= '%.2f' % product_order.price %></td>
            <td><%= product_order.quantity %></td>
            <td><%= '%.2f' % ((product_order.price_m(product_order.id)*0.7)*product_order.quantity) %></td>
            <td><%= '%.2f' % (product_order.price * product_order.quantity) %></td>
            <td><%= total_ps = ((product_order.quantity*product_order.price)/(1.23.to_f)-(((product_order.price_m(product_order.id)*0.7)*product_order.quantity))).round(2) %></td>
            <% total_p = total_p + (product_order.price * product_order.quantity) %>
            <% total_po = total_ps + total_po %>
          <% if i >= 1 %></tr><% end %>
            <% end %>
      </tr>
  <% end %>
  <div class="col-sm-12">
    <div class="dupa">
      <div class="well" id="oplaty">
        <div class="well-1 col-sm-6 cont-right" id="obrot">
      <span><small class="col-sm-3">Obrót - </small><small class="col-sm-3"><%= '%.2f' % total_p %> zł</small></span><br/>
      <span><small class="col-sm-3">Zysk - </small><small class="col-sm-3"><%= '%.2f' % total_po %> zł</small></span><br/>
      <span><small class="col-sm-3">Wynik - </small><small class="col-sm-3"><%= '%.2f' % total_sum = total_po -(Order.aaaa(month, 1).to_i + Order.aaaa(month, 3).to_i + Order.aaaa(month, 2).to_i) %> zł</small></span><br/>
        </div>
          <div class="well-1 col-sm-6 cont-right" id="oplaty">
      <span><small class="col-sm-3">Allegro - </small><small class="col-sm-3"><%= Order.aaaa(month, 1) %></small></span><br/>
      <span><small class="col-sm-3">Kurier - </small><small class="col-sm-3"><%= Order.aaaa(month, 2) %></small></span><br/>
      <span><small class="col-sm-3">Inne - </small><small class="col-sm-3"><%= Order.aaaa(month, 3) %></small></span>
    </div>
      </div>
  </div>
  </div>
  </div>
  </tbody>
</table>
<%end%>
