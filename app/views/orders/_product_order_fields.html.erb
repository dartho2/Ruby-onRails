<div class="order-table">
  <table class="table table-striped table-bordered table-list">
    <tbody>
    <tr>
      <td class="col-sm-3"><%= f.number_field :quantity, class: 'form-control bfh-number' %></td>
      <%= f.fields_for :product, @order.products.build do |f| %>
          <td class="col-sm-3"><%= f.collection_select(:id, Product.where.not(deleted: true, parent_id: nil), :id, :name, {:include_blank => ""}, {class: 'form-control'}) %></td>
      <% end %>
      <td class="col-sm-2"><%= f.text_field :price, class: 'form-control' %></td>

    </tr>
    </tbody>
  </table>
</div>











