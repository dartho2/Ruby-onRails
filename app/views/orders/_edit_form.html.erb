<%= render '/shared/errors', obj: @order %>
<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <div class="panel panel-default panel-table">
        <div class="panel-heading">
          <div class="row">
            <div class="col col-xs-6">
              <h3 class="panel-title"></h3>
            </div>
            <div class="col-xs-12">
              <%= form_for(@order, :html => {class: "form-horizontal", role: "form"}) do |order| %>
                  <div class="form-group">
                    <div class="control-label col-sm-2">
                      <%= order.label :FV %>
                    </div>
                    <div class="col-sm-8">
                      <%= order.text_field :name, class: 'form-control', placeholder: "Nuber FV" %>
                    </div>
                  </div>
                  <div class="panel-body">
                    <table class="table table-striped table-bordered table-list">
                      <thead>
                      <tr>
                        <th class="col-sm-3">Quantity</th>
                        <th class="col-sm-3">Name Product</th>
                        <th class="col-sm-2">Price</th>
                        <th class="col-sm-1 center"><em class="fa fa-cog"></em></th>
                      </tr>
                      </thead>
                    </table>
                    <div class="order-table">
                      <table class="table table-striped table-bordered table-list">
                        <tbody>

                          <%= order.fields_for :product_orders do |f| %>
                            <tr>
                              <td class="col-sm-3"><%= f.number_field :quantity, class: 'form-control bfh-number' %></td>
                                  <td class="col-sm-3"><%= f.text_field :name, class: 'form-control' %></td>
                                  <td class="col-sm-2"><%= f.text_field :price, class: 'form-control' %></td>

                              <td class="col-sm-1 center"><%= f.hidden_field :_destroy %><%= link_to('Delete', class: 'remove_fields btn btn-danger') do %>
                                    <em class="fa fa-trash"></em>
                                <% end %>
                              </td>
                            </tr>
                          <% end %>

                        </tbody>
                      </table>
                    </div>
                    <%= link_to_add_fields '+', order, :product_orders %>
                    <%= order.submit class: "add_fields btn btn-success add-more" %>
              <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
