<%= render '/shared/errors', obj: @order %>
<div class="col-md-12 col-sm-12 col-xs-12">
  <div class="x_panel">
    <div class="x_title">
      <div class="list-group-item active">
        <h2>Faktura
          <small> - sprzedaży</small>
        </h2>
        <div class="pull-right">
          <ul class="nav navbar-right panel_toolbox">
            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
            </li>
            <li><a class="close-link"><i class="fa fa-close"></i></a>
            </li>
          </ul>
        </div>
      </div>
      <div class="clearfix"></div>
    </div>
    <div class="x_content">
      <%= form_for(@order, :data => {role: 'invoice'}, :html => {class: "form-horizontal", role: "form"}) do |order| %>
          <div class="form-group">
            <div class="col-sm-2">
              <%= order.label :datatime, "Data Wystawienia" %>
              <%= order.text_field :datatime, {class: 'form-control', as: :date, 'id' => "datepicker", value: Date.today.strftime("%d/%m/%Y")} %>
            </div>
            <div class="col-sm-2">
              <%= order.label :sale_date, "Data Sprzedaży" %>
              <%= order.text_field :sale_date, {class: 'form-control', 'data-role' => 'datapicker', as: :date, 'id' => "datepicker1", value: Date.today.strftime("%d/%m/%Y")} %>
            </div>
            <div class="col-sm-2">
              <label class="custom-control custom-checkbox">
              </label>
              <div class="toggle-button toggle-button--aava">
                <input id="toggleButton" class="custom-control-input" value="checkedbox" type="checkbox">
                <label for="toggleButton" data-on-text="Paragon" data-off-text="Faktura"></label>
                <div class="toggle-button__icon"></div>
              </div>
            </div>
          </div>
          <div class="checkedbox">
            <div class="x_panel x_panel2">
              <div class="x_title">
                <div class="list-group-item active">
                  <h2>Adress
                    <small> - dodaj</small>
                  </h2>
                  <div class="pull-right">
                    <ul class="nav navbar-right panel_toolbox">
                      <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                      </li>
                      <li><a class="close-link"><i class="fa fa-close"></i></a>
                      </li>
                    </ul>
                  </div>
                </div>
                <div class="clearfix"></div>
              </div>
              <div class="x_content adreess_content">
                <%= render partial: 'shared/client_form', locals: {f: order} %>
              </div>
            </div>
          </div>
          <div class="x_panel x_panel2">
            <div class="x_content">
              <fieldset class="m-b-2" data-changes="amount">
                <div class="list-group-item active">
                  <h2>Pozycje na fakturze
                    <small> - dodaj</small>
                  </h2>
                </div>
                <table class="table table-striped table-bordered table-list phidden-odd">
                  <thead>
                  <tr>
                    <th class="col-sm-6">Nazwa Produktu</th>
                    <th class="col-sm-1">Ilość</th>
                    <th class="col-sm-1">Jednostka</th>
                    <th class="col-sm-1">Cena Brutto</th>
                    <th class="col-sm-1">VAT</th>
                    <th class="col-sm-1">Wartość Netto</th>
                    <th class="col-sm-1">Wartość Brutto</th>
                  </tr>
                  </thead>
                </table>
                <%= render partial: 'shared/item_form', locals: {f: order, invoice: @order} %>
                <div id="buttons1">
                  <div id="container-pos">
                    <%= order.submit("Zapisz Fakturę", class: 'btn btn-primary add-more') %>
                  </div>
                </div>
            </div>
            </fieldset>
          </div>
          </div>
      <% end %>
      <div class="invoice_summary col-sm-4 col-sm-offset-8">
        <table class="table">
          <tbody>
          <tr class="curr_s netto ">
            <th>Suma netto</th>
            <td class="price_td"><span class="netto_price">0.00</span><span class="subtotal_currency"></span></td>
            <td style="width:1%;" class="_curr1">PLN</td>
            <td id="invoice_summary_currency_change">
            </td>
          </tr>
          <tr class="curr_s ">
            <th>Suma VAT</th>
            <td class="price_td"><span class="vat">0.00</span><span class="subtotal_currency"></span></td>
            <td class="_curr1"> PLN</td>
            <td></td>
          </tr>
          <tr class="curr_s more_discount1 hidden" style="display: none;">
            <th class="">Suma rabatu</th>
            <td class="price_td"><span class="subtotal">0.00</span><span class="subtotal_currency"></span></td>
            <td class="_curr1"> PLN</td>
            <td></td>
          </tr>
          <tr class="curr_s">
            <th class="bold">Suma brutto</th>
            <td class="price_td"><span class="subtotal">0.00</span><span class="subtotal_currency"></span></td>
            <td class="_curr1">
              PLN
            </td>
            <td></td>
          </tr>
          <tr class="curr_s more_discount1 hidden" style="display: none;">
            <th class="bold ">Suma po rabacie</th>
            <td class="price_td"><span class="subtotal"></span><span class="subtotal_currency"></span></td>
            <td class="_curr1"> PLN</td>
          </tr>
          </tbody>
        </table>
      </div>
      </div>
</div>
















