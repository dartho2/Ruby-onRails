<%= render '/shared/errors', obj: @order %>
<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <div class="panel panel-default panel-table">
        <div class="panel-heading">
          <div class="row">
            <div class="col col-xs-6">
              <h3 class="panel-title"></h3>
            </div>
            <div class="col-xs-12">
              <%= form_for(@order, :html => {class: "form-horizontal", role: "form"}) do |order| %>
                  <div class="form-group">
                    <div class="control-label col-sm-2">
                      <%= order.label :FV %>
                    </div>
                    <div class="col-sm-8">
                      <%= order.text_field :name, class: 'form-control', placeholder: "Nuber FV" %>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="col-sm-8">
                  <label class="custom-control custom-checkbox">Paragon:
                    <input type="checkbox" class="custom-control-input" value="checkedbox">
                    <span class="custom-control-indicator"></span>
                  </label>
                    </div>
                  </div>
                  <%= order.fields_for :client do |client| %>
                      <div class="checkedbox">
                      <div class="form-group">
                      <div class="control-label col-sm-2">
                        <%= client.label :Client_name %>
                      </div>
                      <div class="col-sm-8">
                        <%= client.text_field :firstname, class: 'form-control', placeholder: "First_name" %>
                      </div>
                      </div>
                      <%= client.fields_for :adress do |adress| %>
                            <div class="form-group">
                          <div class="control-label col-sm-2">
                            <%= adress.label :city %>
                          </div>
                          <div class="col-sm-8">
                            <%= adress.text_field :city, class: 'form-control', placeholder: "City" %>
                          </div>
                          </div>
                            </div>
                      <% end %>

                      <% end %>
                  <div class="panel-body">
                    <table class="table table-striped table-bordered table-list">
                      <thead>
                      <tr>
                        <th class="col-sm-3">Quantity</th>
                        <th class="col-sm-3">Name Product</th>
                        <th class="col-sm-2">Price</th>
                        <th class="col-sm-1 center"><em class="fa fa-cog"></em></th>
                      </tr>
                      </thead>
                    </table>
                    <%= link_to_add_fields '+', order, :product_orders %>
                    <%= order.submit class: "add_fields btn btn-success add-more" %>
              <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>



























