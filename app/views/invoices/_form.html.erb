<%= render '/shared/errors', obj: @invoice %>
<div class="col-md-12 col-sm-12 col-xs-12">
  <div class="x_panel">
    <div class="x_title">
      <h2>Faktura
        <small>paragon</small>
      </h2>
      <ul class="nav navbar-right panel_toolbox">
        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
        </li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
        </li>
        <li><a class="close-link"><i class="fa fa-close"></i></a>
        </li>
      </ul>
      <div class="clearfix"></div>
    </div>
    <div class="x_content">
      <%= form_for(@invoice, :html => {class: "form-horizontal", role: "form"}) do |invoice| %>
          <div class="form-group">
            <div class="control-label col-sm-3">
              <%= invoice.label :name, "Numer Faktury" %>
            </div>
            <div class="col-sm-2">
              <%= invoice.text_field :name, class: 'form-control', placeholder: "Numer FV" %>
            </div>
            <div class="col-sm-2">

              <fieldset>
                <div class="control-group">
                  <div class="controls">
                    <div class="col-md-11 xdisplay_inputx form-group has-feedback">
                      <%= invoice.text_field :datatime, class: 'form-control has-feedback-left', id: "single_cal3", placeholder: "data", 'aria-describedby' => "inputSuccess2Status3" %>
                      <span class="fa fa-calendar-o form-control-feedback left" aria-hidden="true"></span>
                      <span id="inputSuccess2Status3" class="sr-only">(success)</span>
                    </div>
                  </div>
                </div>
              </fieldset>
            </div>
          </div>
          <table class="table table-striped table-bordered table-list">
            <thead>
            <tr>
              <th class="col-sm-3">Ilość</th>
              <th class="col-sm-3">Nazwa Produktu</th>
              <th class="col-sm-2">Cena</th>
              <th class="col-sm-1 center"><em class="fa fa-cog"></em></th>
            </tr>
            </thead>
          </table>
                <%= link_to_add_fields '+', invoice, :magazine_invoices %>
                <%= invoice.submit "Zapisz Fakturę",class: "add_fields btn btn-dark add-more" %>
      <% end %>
      </div>
</div>
</div>
</div>
</div>
















