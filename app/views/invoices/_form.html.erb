<%= render '/shared/errors', obj: @invoice %>
<div class="col-md-12 col-sm-12 col-xs-12">
  <div class="x_panel">
    <div class="x_title">
      <div class="list-group-item active">
        <h2>Faktura
          <small> - zakupowa</small>
        </h2>
        <div class="pull-right">
          <ul class="nav navbar-right panel_toolbox">
            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
            </li>
            <li><a class="close-link"><i class="fa fa-close"></i></a>
            </li>
          </ul>
        </div> <!-- pull-right -->
      </div>
      <div class="clearfix"></div>
    </div>
    <div class="x_content">
      <%= form_for(@invoice, :html => {class: "form-horizontal", role: "form"}) do |invoice| %>
          <div class="form-group">
            <div class="col-sm-2">
              <%= invoice.label :name, "Numer Faktury" %>
              <%= invoice.text_field :name, class: 'form-control', placeholder: "Numer FV" %>
            </div>
            <div class="col-sm-2">
              <fieldset>
                <div class="control-group">
                  <div class="controls">
                    <div class="col-md-11 xdisplay_inputx form-group has-feedback">
                      <%= invoice.label :datatime, "Data Wystawienia" %>
                      <%= invoice.text_field :datatime, class: 'form-control has-feedback-left', id: "single_cal3", placeholder: "data", 'aria-describedby' => "inputSuccess2Status3" %>
                      <span class="fa fa-calendar-o form-control-feedback left" aria-hidden="true"></span>
                      <span id="inputSuccess2Status3" class="sr-only">(success)</span>
                    </div>
                  </div>
                </div>
              </fieldset>
            </div>
          </div>
          <table class="table table-striped table-bordered table-list">
            <thead>
            <tr>
              <th class="col-sm-7">Nazwa Produktu</th>
              <th class="col-sm-2">Ilość</th>
              <th class="col-sm-2">Cena</th>
              <th class="col-sm-1 center"><em class="fa fa-cog"></em></th>
            </tr>
            </thead>
          </table>
          <%= link_to_add_fields '+', invoice, :magazine_invoices %>
          <%= invoice.submit "Zapisz Fakturę", class: "add_fields btn btn-primary add-more" %>
      <% end %>
    </div>
  </div>
</div>

















