<%= render '/shared/errors', obj: @magazine %>
<div class="clearfix"></div>

<div class="col-md-12 col-sm-12 col-xs-12">
  <div class="x_panel">
    <div class="x_title">
      <h2>Produkt - magazyn
        <small>dodaj</small>
      </h2>
      <ul class="nav navbar-right panel_toolbox">
        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
        </li>
        <li><a class="close-link"><i class="fa fa-close"></i></a>
        </li>
      </ul>
      <div class="clearfix"></div>
    </div>
    <div class="x_content2">
      <br/>
      <%= form_for(@magazine, :html => {class: "form-horizontal form-label-left", id: "demo-form2", role: "form"}) do |f| %>

          <div class="form-group">
            <%= f.label :productname, "Nazwa Produktu", class: "control-label col-md-3 col-sm-3 col-xs-12" %>
            <div class="col-md-6 col-sm-6 col-xs-12">
              <%= f.text_field :productname, class: "form-control col-md-7 col-xs-12", placeholder: "Name", autofocus: true %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :quantity, "Ilość", class: "control-label col-md-3 col-sm-3 col-xs-12" %>
            <div class="col-md-6 col-sm-6 col-xs-12">
              <%= f.text_field :quantity, class: "form-control col-md-7 col-xs-12", placeholder: "Ilość" %>
            </div>
          </div>
          <div class="form-group">
      <%= f.label :price, "Cena Zakupu", class: "control-label col-md-3 col-sm-3 col-xs-12" %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.text_field :price, class: "form-control col-md-7 col-xs-12", placeholder: "Cena Zakupu" %>
      </div>
    </div>
          <div class="form-group">
            <%= f.label :marza, "Marża", class: "control-label col-md-3 col-sm-3 col-xs-12" %>
            <div class="col-md-6 col-sm-6 col-xs-12">
              <%= f.text_field :marza, class: "form-control col-md-7 col-xs-12", placeholder: "marza" %>
            </div>
          </div>
          <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
              <div class="x_title">
                <h2>Wymiary
                  <small>paczek</small>
                </h2>
                <ul class="nav navbar-right panel_toolbox">
                  <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                  </li>
                  <li><a class="close-link"><i class="fa fa-close"></i></a>
                  </li>
                </ul>
                <div class="clearfix"></div>
              </div>
              <div class="x_content2">
                <%= f.fields_for :productshipment, class: "col-md-12" do |f| %>
                    <div class="form-group">
                      <%= f.label :height, "Wysokość/ najdłuższy bok", class: "control-label col-md-1" %>
                      <div class="col-sm-1">
                        <%= f.text_field :height, class: "form-control col-md-1" %>
                      </div>
                      <%= f.label :width, "Szerokość", class: "control-label col-md-1" %>
                      <div class="col-sm-1">
                        <%= f.text_field :width, class: "form-control col-md-1" %>
                      </div>
                      <%= f.label :depth, "Głębokość", class: "control-label col-md-1" %>
                      <div class="col-md-1">
                        <%= f.text_field :depth, class: "form-control col-md-1" %>
                      </div>
                      <%= f.label :weight, "Waga", class: "control-label col-md-1" %>
                      <div class="col-md-1">
                        <%= f.text_field :weight, class: "form-control col-md-1" %>
                      </div>
                      <%= f.hidden_field :_destroy %>
                    </div>
                <% end %>
              </div>
            </div>
          </div>


          <div class="form-group">
            <%= f.fields_for :product_structures, class: "control-label col-md-3 col-sm-3 col-xs-12" do |f| %>

                <table class="table table-striped table-bordered table-list">

                  <tr>
                    <td>
                      <%= f.label :wymiary, "Wymiary", class: "control-label col-md-3 col-sm-3 col-xs-12" %>
                      <div class="col-md-3 col-sm-3 col-xs-12 form-group has-feedback">
                        <%= f.text_field :label, class: "form-control col-md-7 col-xs-2" %>
                      </div>
                      <div class="col-md-3 col-sm-3 col-xs-12 form-group has-feedback">
                        <%= f.text_field :value, class: "form-control col-md-7 col-xs-2" %>
                      </div>
                      <div class="col-md-1 col-sm-1 col-xs-12 form-group has-feedback">
                        <%= f.hidden_field :_destroy %><%= link_to('Delete', class: 'remove_fields') do %>
                            <em class="fa fa-trash"></em>
                        <% end %>
                      </div>
                    </td>
                  </tr>

                </table>
            <% end %>
          </div>

          <%= link_to_add_fields 'Dodaj specyfikacja', f, :product_structures %>
          <%= f.submit "Zapisz", class: "add_fields btn btn-dark add-more" %>


          </div>
          </div>
          </div>


      <% end %>

