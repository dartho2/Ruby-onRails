<%= render '/shared/errors', obj: @magazine %>
<div class="clearfix"></div>
<div class="row">
  <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
      <div class="x_title">
        <div class="list-group-item active">
          <h2>Nowy Produkt
            <small> - magazyn</small>
          </h2>
          <div class="pull-right">
            <ul class="nav navbar-right panel_toolbox">
              <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
              </li>
              <li><a class="close-link"><i class="fa fa-close"></i></a>
              </li>
            </ul>
          </div> <!-- pull-right -->
        </div>
        <div class="clearfix"></div>
      </div>
      <div class="x_content">
        <br/>
        <%= form_for(@magazine, :html => {class: "form-horizontal form-label-left", id: "demo-form2", role: "form"}) do |f| %>
            <div class="col-md-6">
              <div class="form-group">
                <div class="col-sm-12">
                <%= f.label :productname, "Nazwa Produktu" %>
                <%= f.text_field :productname, class: 'form-control' %>
              </div>
                <div class="col-sm-12">
                  <%= f.label :code, "Kod Produktu" %>
                  <%= f.text_field :code, class: 'form-control' %>
                </div>
                <div class="col-sm-12">
                  <%= f.label :marza, "Marża" %>
                  <%= f.text_field :marza, class: 'form-control' %>
                </div>
                <div class="col-sm-12">
                  <%= f.label :quantity, "Ilość" %>
                  <%= f.text_field :quantity, class: 'form-control' %>
                </div>
                <div class="col-sm-12">
                  <%= f.label :price, "Cena Zakupu" %>
                  <%= f.text_field :price, class: 'form-control' %>
                </div>
                <div class="col-sm-12">
                  <%= f.label :price_sell, "Cena Sprzedaży" %>
                  <%= f.text_field :price_sell, class: 'form-control' %>
                </div>
              </div>
            </div>
            <%= f.fields_for :productshipment, class: "col-md-12" do |f| %>
                <div class="form-group">
                  <div class="col-md-6">
                    <div class="col-sm-12">
                      <%= f.label :height, "Wysokość/ najdłuższy bok" %>
                      <%= f.text_field :height, class: "form-control" %>
                    </div>
                    <div class="col-sm-12">
                      <%= f.label :width, "Szerokość" %>
                      <%= f.text_field :width, class: "form-control" %>
                    </div>
                    <div class="col-sm-12">
                      <%= f.label :depth, "Głębokość" %>
                      <%= f.text_field :depth, class: "form-control" %>
                    </div>
                    <div class="col-sm-12">
                      <%= f.label :weight, "Waga" %>
                      <%= f.text_field :weight, class: "form-control" %>
                    </div>
                    <%= f.hidden_field :_destroy %>
                  </div>
                </div>
            <% end %>
            <div class="form-group">
              <%= f.fields_for :product_structures, @a, class: "control-label col-md-3 col-sm-3 col-xs-12" do |f| %>
                  <table class="table table-striped table-bordered table-list">
                    <tr>
                      <td>
                        <%= f.label :wymiary, "Wymiary", class: "control-label col-md-3 col-sm-3 col-xs-12" %>
                        <div class="col-md-3 col-sm-3 col-xs-12 form-group has-feedback">
                          <%= f.text_field :label, class: "form-control col-md-7 col-xs-2" %>
                        </div>
                        <div class="col-md-3 col-sm-3 col-xs-12 form-group has-feedback">
                          <%= f.text_field :value, class: "form-control col-md-7 col-xs-2" %>
                        </div>
                        <div class="col-md-1 col-sm-1 col-xs-12 form-group has-feedback">
                          <%= f.hidden_field :_destroy %><%= link_to('Delete', class: 'remove_fields') do %>
                              <em class="fa fa-trash"></em>
                          <% end %>
                        </div>
                      </td>
                    </tr>
                  </table>
              <% end %>

              <%= link_to_add_association t(" "), f, :product_structures %>
            </div>
            <%= f.submit 'Zapisz', class: "btn btn-primary add-more" %>
        <% end %>
      </div>
    </div>
  </div>
</div>


