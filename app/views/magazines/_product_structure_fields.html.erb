<div class="order-table">
  <table class="table table-striped table-bordered table-list">
    <tbody>
    <tr>

      <td class="col-sm-2"><%= f.text_field :label, class: 'form-control bfh-number' %>

      <td class="col-sm-2"><%= f.text_field :value, class: 'form-control bfh-number' %>

      <td class="col-sm-1 center"><%= f.hidden_field :_destroy %><%= link_to('Delete', class: 'remove_fields btn btn-danger') do %>
            <em class="fa fa-trash"></em>
        <% end %></td>
    </tr>
    </tbody>
  </table>
</div>




