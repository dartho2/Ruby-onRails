<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <div class="panel panel-default panel-table">
        <div class="panel-heading">
          <div class="row">
            <div class="col col-xs-6">
              <h3 class="panel-title">Category</h3>
            </div>
            <div class="col col-xs-6 text-right">
              <%= link_to("Create New", new_category_path, class: "btn btn-success") %>
            </div>
          </div>
        </div>
        <div class="panel-body">
          <table class="table table-striped table-bordered table-list">
            <thead>
            <tr>
              <th class="hidden-xs">ID</th>
              <th>Name</th>
              <th>Description</th>
              <th class="col-md-2"><em class="fa fa-cog"></em></th>
            </tr>
            </thead>
            <% obj.each do |category| %>
                <tbody>
                <tr>
                  <td class="hidden-xs"><%= category.id %></td>
                  <td><%= category.name %></td>
                  <td><%= category.description %></td>
                  <td align="center">
                    <%= link_to(category_path(category), class: "btn btn-primary") do %>
                        <em class="fa fa-search"></em>
                    <% end %>
                    <%= link_to(edit_category_path(category), class: "btn btn-default") do %>
                        <em class="fa fa-pencil"></em>
                    <% end %>
                    <%= link_to(category_path(category), method: :delete,
                                data: {confirm: "Are u sure ?"},
                                class: "btn btn-danger") do %>
                        <em class="fa fa-trash"></em>
                    <% end %>
                  </td>
                </tr>
                </tbody>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>


