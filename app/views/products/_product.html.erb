<div class="col-md-12 col-sm-12 col-xs-12">
  <div class="x_panel">
    <div class="x_title">
      <h2>Produkty
        <small>aktualne ceny</small>
      </h2>

      <div class="clearfix"></div>
    </div>
    <div class="x_content">
      <p class="text-muted font-13 m-b-30">
      </p>
      <table id="datatable-buttons" class="table table-striped table-bordered">
        <thead>
        <tr>
          <th class="col-6 col-sm-5">Nazwa</th>
          <th class="col-6 col-sm-5">Cena</th>
          <th class="col-6 col-sm-2">Akcja</th>
        </tr>
        </thead>

        <tbody>
        <% obj.each do |product| %>

            <tr>
              <td><%= product.name %></td>
              <td><%= product.price %> z≈Ç</td>
              <td>
                <%= link_to(product_path(product), class: "glyphicon glyphicon-search") do %><% end %>
                <%= link_to(edit_product_path(product), class: "glyphicon glyphicon-edit") do %><% end %>
                <%= link_to(product_path(product), method: :delete,
                            data: {confirm: "Are u sure ?"},
                            class: "glyphicon glyphicon-trash") do %><% end %>
              </td>
            </tr>

        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>



