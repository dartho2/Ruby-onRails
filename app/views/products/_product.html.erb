<div class="col-md-12 col-sm-12 col-xs-12">
  <div class="x_panel">
    <div class="x_title">
      <h2>Produkty<small>aktualne ceny</small></h2>
      <ul class="nav navbar-right panel_toolbox">
        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
        </li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
        </li>
        <li><a class="close-link"><i class="fa fa-close"></i></a>
        </li>
      </ul>
      <div class="clearfix"></div>
    </div>
    <div class="x_content">
      <p class="text-muted font-13 m-b-30">
        </p>
      <table id="datatable-buttons" class="table table-striped table-bordered">
        <thead>
        <tr>
          <th>Nazwa</th>
          <th>Cena</th>
          <th>Akcja</th>
        </tr>
        </thead>

        <tbody>
        <% obj.each do |product| %>

            <tr>
              <td><%= product.name %></td>
              <td><%= product.price %></td>
              <td>
                <%= link_to(product_path(product), class: "btn btn-primary") do %>
                    <em class="fa fa-search"></em>
                <% end %>
                <%= link_to(edit_product_path(product), class: "btn btn-default") do %>
                    <em class="fa fa-pencil"></em>
                <% end %>
                <%= link_to(product_path(product), method: :delete,
                            data: {confirm: "Are u sure ?"},
                            class: "btn btn-danger") do %>
                    <em class="fa fa-trash"></em>
                <% end %>
              </td>
            </tr>

        <% end %>
        </tbody>
        </table>
    </div>
  </div>
</div>


