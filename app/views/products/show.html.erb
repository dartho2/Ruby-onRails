<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <div class="panel panel-default panel-table">
        <div class="panel-heading">
          <div class="row">
            <div class="col col-xs-6">
              <h3 class="panel-title text-right"><b>History Product <%= "#{@product.name}" %></b></h3>
            </div>

            <% @product.product_structure.each do |specyfication| %>

                <%= specyfication.label %> - <%= specyfication.value %>


            <% end %>
            <div class="col col-xs-6 text-right">
              <%= link_to("Create New", new_product_path, class: "btn btn-success") %>
            </div>
          </div>
        </div>

        <div class="panel-body">
          <table class="table table-striped table-bordered table-list">
            <thead>
            <tr>
              <th class="hidden-xs">ID</th>
              <th>Name</th>
              <th>price</th>
              <th class="col-md-2 center"><em class="fa fa-cog"></em></th>
            </tr>
            </thead>
            <% @products.each do |product| %>
                <tbody>
                <tr>
                  <td class="hidden-xs"><%= product.id %></td>
                  <td><%= product.name %></td>
                  <td><%= product.price %></td>
                  <td align="center">

                  </td>
                </tr>
                </tbody>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>




