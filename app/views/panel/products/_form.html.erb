<%= render '/panel/shared/errors', obj: @product %>
<div class="row">
  <div class="col-xs-12">
    <%= form_for(@product, url: panel_products_path, :html => {class: "form-horizontal", role: "form"}) do |f| %>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :name %>
          </div>
          <div class="col-sm-8">
            <%= f.text_field :name, class: "form-control", placeholder: "User name", autofocus: true %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :price %>
          </div>
          <div class="col-sm-8">
            <%= f.text_field :price, class: "form-control", placeholder: "email" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-6">
            <%= f.submit %>
          </div>
          <div class="col-sm-6">

          </div>
        </div>
    <% end %>
  </div>
</div>
