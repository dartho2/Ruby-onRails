<div class="invoice-row invoice-item js-item col-sm-12" id="js-item-product">
  <div class="invoice-col invoice-col--description form-group col-sm-4">
    <%= f.fields_for :magazine, @invoice.magazines.build do |f| %>
        <div class="phidden">
          <%= f.label :productname, "Produkt" %>
        </div>
        <%= f.text_area :productname, class: "form-control", rows: 1, "data-role": "item-description" %>
        <%= f.hidden_field :id %>
        <%# f.text_area :price, "data-role": "item-price-i-magazine" %>
        <%= f.hidden_field :cat_buy %>
        <%= f.hidden_field :_destroy, class: 'hidden-destroy' %>
    <% end %>
  </div>
  <div class="invoice-col invoice-col--quantity form-group col-sm-2">
    <div class="phidden">
      <%= f.label :quantity, "Ilość" %>
    </div><%= f.number_field :quantity, class: 'form-control' %>
  </div>
  <div class="invoice-col invoice-col--price form-group col-sm-3">
    <div class="phidden"><%= f.label :price, "Cena Netto" %></div>
    <%= f.text_field :price, class: 'form-control', "data-role": "item-price-magazine" %>
  </div>
  <div class="invoice-col invoice-col--price-n-m form-group col-sm-3">
    <div class="phidden"><%= f.label :price_n_m, "Cena Brutto" %></div>
    <%= f.text_field :price_n_m, class: 'form-control', "data-role": "item-price-n-magazine" %>
  </div>
  <%= f.hidden_field :_destroy, class: 'hidden-destroy' %>
  <div class="invoice-col invoice-col--removal form-group">
    <%= link_to_remove_association f, {wrapper_class: 'js-item', class: ''} do %>
        <i class="fa fa-remove"></i>
    <% end %>
  </div>
</div>
